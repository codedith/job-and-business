<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>

        <layer-list>

            <item>
                <shape>
                    <shape android:shape="rectangle" />

                    <stroke android:width="0.5dp" android:color="@color/grey" />

                    <solid android:color="@color/field_color" />

                    <corners android:radius="4dp" />

                    <padding android:right="10dp" />
                </shape>
            </item>

            <item android:gravity="end|center" android:left="5dp" android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_dropdown" android:tint="@color/grey" />

            </item>

        </layer-list>

    </item>

</selector>